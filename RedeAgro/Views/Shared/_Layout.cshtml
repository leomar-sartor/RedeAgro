<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Práxis</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    
    <link rel="stylesheet" href="~/lib/leaflet/leaflet.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet.draw/1.0.4/leaflet.draw.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RedeAgro.styles.css" asp-append-version="true" />

    <link href="~/lib/fontawesome-free-6.1.2-web/css/all.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="DashboardPrincipal">Práxis</a>
                }
                else{
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Práxis</a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    @{
                        if (User?.Identity?.IsAuthenticated ?? false)
                        {
                                    <h6><span style="color: gray" class="badge badge-primary me-2"> @User.Identity.Name.Split("@")?[0]</span></h6>
                                    <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">Sair</a>
                        }
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="text-center"> &copy; 2023 - Práxis </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script src="~/lib/leaflet/leaflet.js" asp-append-version="true"></script>
    <script src="~/lib/leaflet/leaflet.extra-markers.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet.draw/1.0.4/leaflet.draw.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
